<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fmusic">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kembali"
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            />

        <AutoCompleteTextView
            android:id="@+id/pilihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Music Title"
            android:gravity="center"
            android:completionThreshold="1"
            android:completionHint="Select Genre"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mj"
            android:layout_width="125dp"
            android:layout_height="173dp"
            android:src="@drawable/mj"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heal The World"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bruno"
            android:layout_width="125dp"
            android:layout_height="173dp"
            android:src="@drawable/brunomars"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When I Was Your Man"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>

</LinearLayout>